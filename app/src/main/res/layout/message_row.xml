<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp"
    android:layout_marginHorizontal="5dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leftHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:shapeAppearance="@style/CardViewCustomCornerLeft"
        android:layout_marginEnd="90dp"
        app:cardElevation="10dp"
        android:backgroundTint="#FFAB00">

        <TextView
            android:id="@+id/leftChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello Pawan Singh"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="6dp"
            android:textSize="19sp"
            android:textColor="@color/black"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_alignParentEnd="true"
        android:id="@+id/rightHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardElevation="10dp"
        app:shapeAppearance="@style/CardViewCustomCornerRight"
        android:layout_marginStart="80dp"
        android:backgroundTint="@color/primary">
        <TextView
            android:id="@+id/rightChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello Pawan Singh"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="6dp"
            android:textSize="19sp"
            android:textColor="@color/white"/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>