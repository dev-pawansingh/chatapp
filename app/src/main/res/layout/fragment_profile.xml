<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/register_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !!"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:textColor="#FF6D00"
        android:textStyle="bold"/>

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:tint="@color/secondary"
        android:src="@drawable/ic_person"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pawan Singh"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ph_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone : +91 1111111111"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/btn_change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change user name?"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_holder"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="17dp"
        app:boxCornerRadiusBottomEnd="17dp"
        app:boxCornerRadiusTopStart="17dp"
        app:boxCornerRadiusTopEnd="17dp"
        app:boxCornerRadiusBottomStart="17dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="Enter new user name"
            android:textSize="20sp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Change"
        android:backgroundTint="@color/primary"
        android:textSize="23sp"
        android:layout_marginHorizontal="20dp"
        app:cornerRadius="15dp"/>


    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out?"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:textColor="#6A6666"/>




</LinearLayout>